<% unless @user == current_user %>
  <div id="follow_form">
    <% if current_user.friend?(@user) %>
      <%= render 'unfollow' %>
    <% elsif current_user.pending_friends.include?(@user) %>
      <%= render 'accept_request' %>
    <% else %>
      <%= render 'follow' %>
    <% end %>
  </div>
<% end %>

