<%= form_with(model: Friendship.find_by(user_id: user.id, friend_id: current_user.id), local: true) do |f| %>
  <%= f.submit "Accept request", class: "btn btn-primary" %>
<% end %>

<%= form_with(model: Friendship.find_by(user_id: current_user.id, friend_id: user.id),
            html: { method: :delete },local: true) do |f| %>
    <%= f.submit "Cancel request", class: "btn btn-primary" %>
<% end %>
